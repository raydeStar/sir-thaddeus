<Window x:Class="SirThaddeus.DesktopRuntime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SirThaddeus.DesktopRuntime"
        xmlns:vm="clr-namespace:SirThaddeus.DesktopRuntime.ViewModels"
        mc:Ignorable="d"
        Title="Sir Thaddeus"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Width="280"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Color palette -->
        <SolidColorBrush x:Key="PillBackgroundBrush" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="PillBorderBrush" Color="#45475A"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#CDD6F4"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#A6ADC8"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#89B4FA"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#F38BA8"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#A6E3A1"/>
        <SolidColorBrush x:Key="DrawerBackgroundBrush" Color="#181825"/>

        <!-- Button style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PillBorderBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#585B70"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
            <Setter Property="Foreground" Value="#1E1E2E"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Bool to Visibility converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Drop shadow effect -->
        <DropShadowEffect x:Key="WindowShadow" 
                          BlurRadius="15" 
                          ShadowDepth="3" 
                          Opacity="0.4"
                          Color="#000000"/>
    </Window.Resources>

    <Border CornerRadius="12" 
            Background="{StaticResource PillBackgroundBrush}" 
            BorderBrush="{StaticResource PillBorderBrush}"
            BorderThickness="1"
            Effect="{StaticResource WindowShadow}">
        
        <StackPanel>
            <!-- Pill Header (always visible). Click toggles; drag moves the window. -->
            <Border Padding="12,10" 
                    Cursor="Hand"
                    Background="Transparent"
                    ToolTip="Click to expand • Drag to move"
                    MouseLeftButtonDown="Pill_MouseLeftButtonDown"
                    MouseMove="Pill_MouseMove"
                    MouseLeftButtonUp="Pill_MouseLeftButtonUp">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- State indicator dot -->
                    <Ellipse Grid.Column="0" 
                             Width="10" Height="10" 
                             Fill="{StaticResource AccentBrush}"
                             Margin="0,0,10,0"
                             VerticalAlignment="Center"/>

                    <!-- State label -->
                    <TextBlock Grid.Column="1"
                               Text="{Binding StateLabel}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="13"
                               FontWeight="Medium"
                               VerticalAlignment="Center"/>

                    <!-- Expand/collapse indicator -->
                    <TextBlock Grid.Column="2"
                               Text="▼"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               RenderTransformOrigin="0.5,0.5">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="0"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDrawerOpen}" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <RotateTransform Angle="180"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- Drawer (expandable) -->
            <Border Visibility="{Binding IsDrawerOpen, Converter={StaticResource BoolToVisibility}}"
                    Background="{StaticResource DrawerBackgroundBrush}"
                    CornerRadius="0,0,12,12"
                    Padding="12">
                <StackPanel>
                    <!-- Section: Recent Actions -->
                    <TextBlock Text="RECENT ACTIONS"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <!-- Audit feed list -->
                    <Border Background="{StaticResource PillBackgroundBrush}"
                            CornerRadius="6"
                            Padding="8"
                            MaxHeight="200">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding AuditFeed}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding TimeDisplay}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="11"
                                                       FontFamily="Consolas"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Summary}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="11"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <!-- Empty state -->
                    <TextBlock Text="No recent actions"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               FontStyle="Italic"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AuditFeed.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Permission Status -->
                    <Border Margin="0,12,0,0" 
                            BorderThickness="0,1,0,0" 
                            BorderBrush="{StaticResource PillBorderBrush}"
                            Padding="0,12,0,0">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="PERMISSIONS"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="11"
                                           FontWeight="SemiBold"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="Active tokens: "
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="10"/>
                                    <TextBlock Text="{Binding ActiveTokenCount}"
                                               Foreground="{StaticResource AccentBrush}"
                                               FontSize="10"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                            <TextBlock Text="{Binding PermissionDemoStatus}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="11"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>
                        </StackPanel>
                    </Border>

                    <!-- Action buttons -->
                    <StackPanel Margin="0,16,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="STOP ALL"
                                Command="{Binding StopAllCommand}"
                                Style="{StaticResource DangerButtonStyle}"
                                Margin="0,0,8,0"/>

                        <Button Content="Pause Service"
                                Command="{Binding PauseServiceJobsCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                IsEnabled="False"
                                ToolTip="No service connection (V0)"/>
                    </StackPanel>

                    <!-- Debug controls (only visible in DEBUG builds) -->
                    <Border Margin="0,12,0,0" 
                            BorderThickness="0,1,0,0" 
                            BorderBrush="{StaticResource PillBorderBrush}"
                            Padding="0,12,0,0"
                            Visibility="{Binding IsDebugMode, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel>
                            <TextBlock Text="DEBUG CONTROLS"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="10"
                                       Margin="0,0,0,8"/>
                            <Button Content="Simulate State Change"
                                    Command="{Binding SimulateStateCommand}"
                                    Style="{StaticResource ActionButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,8"/>
                            <Button Content="Demo Permission Flow"
                                    Command="{Binding DemoPermissionCommand}"
                                    Style="{StaticResource ActionButtonStyle}"
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</Window>

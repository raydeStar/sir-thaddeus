<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite" Version="8.0.10" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\packages\memory-sqlite\SirThaddeus.Memory.Sqlite\SirThaddeus.Memory.Sqlite.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Prevent this utility project from globbing harness sources under tools/. -->
    <Compile Remove="SirThaddeus.Harness\**\*.cs" />
    <EmbeddedResource Remove="SirThaddeus.Harness\**\*" />
    <None Remove="SirThaddeus.Harness\**\*" />
  </ItemGroup>

</Project>
